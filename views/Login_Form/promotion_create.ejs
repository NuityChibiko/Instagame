<%- include("patials/header") %>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>promotion</title>
  <link rel="stylesheet" href="/css/c_team.css">

  <!-- <link rel="stylesheet" href="/css/tag_demo.css"> -->
  <link rel="stylesheet" href="/css/tag_style.css">
  <script src="/js/script-min.js"></script>
  <script src="/js/tag_script.js"></script>

  <!-- <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script> -->

  <style>

    body {
      background-image: url('/image/tom_clancys_the_division_5.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed; 
      background-size: 100% 100%;
  }
</style>
</head>
    
<body>

<div class="create-news">
    <a href="/" class="create-news_btn_close">
        <div class="create-news-icon-close"></div>
    </a>
    <div class="create-news_header">
        <h3 style="font-family: 'Kanit', sans-serif; color: gray;">ขออัพเกรดระดับสมาชิก</h3>
    </div>

    <form action="/promotion/request/<%= currentUser._id %>" method = 'POST' enctype="multipart/form-data">
      <div class="form-group">
        <label for="exampleFormControlInput1">ชื่อบริษัทที่ต้องการอัพเกรด</label>
        <input type="text" class="form-control" id="party-name" placeholder="ใส่ชื่อบริษัท" name="company">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">เหตุผลที่ต้องการอัพเกรด</label>
        <textarea class="form-control" id="descteam" rows="3" name="content"></textarea>
      </div>
      <div class="form-group">
        <label for="img">เอกสารประกอบการร้องขอ (ไฟล์ PDF เท่านั้น)</label>
        <input type="file" id="party-img" name="PDF" accept=".pdf" required>
      </div>
      <div class="party-btn">
        <div class="submit-create-party">
          <button type="submit" class="submit-create-party-btn">
            <svg class="bi bi-file-earmark-plus" width="1.3em" height="1.3em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 1H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h5v-1H4a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1h5v2.5A1.5 1.5 0 0 0 10.5 6H13v2h1V6L9 1z"/>
              <path fill-rule="evenodd" d="M13.5 10a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13v-1.5a.5.5 0 0 1 .5-.5z"/>
              <path fill-rule="evenodd" d="M13 12.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"/>
            </svg>
            ส่งคำขอ
          </button>
        </div>
      </div>
    </form>

  </div>

</body>

<%- include("patials/footer") %>

