<%- include("patials/header") %>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>create community</title>
  <link rel="stylesheet" href="/css/c_column.css">

  <!-- <link rel="stylesheet" href="/css/tag_demo.css"> -->
  <link rel="stylesheet" href="/css/tag_style.css">
  <script src="/js/script-min.js"></script>
  <script src="/js/tag_script.js"></script>

  <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>

  <style>
    body {
      background-image: url('/image/horizon_zero_dawn.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed; 
      background-size: 100% 100%;
    }
  </style>
</head>
    
<body>

<div class="create-news" href="/">
    <a href="/commu" class="create-news_btn_close">
        <div class="create-news-icon-close"></div>
    </a>
    <div class="create-news_header">
        <h3 style="font-family: 'Kanit', sans-serif; color: gray;">สร้างกระทู้</h3>
    </div>

    <form action="/commu/create" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="exampleFormControlInput1">ชื่อกระทู้</label>
        <input type="text" class="form-control" id="party-name" placeholder="ใส่ชื่อกระทู้" name="head" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">ชื่อเกม</label>
        <input type="text" class="form-control" id="party-game-name" placeholder="ใส่ชื่อเกม" name="game">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">ประเภทเกม</label>
        <select class="game-type form-item form-control" id="game-type" name="type" required aria-placeholder="เลือกประเภทเกมส์">
          <option value="Survival">Survival</option>
          <option value="RPG">Role-Player Game (RPG)</option>
          <option value="Battle_Royal">Battle Royale</option>
          <option value="FPS">First Person Shooter (FPS)</option>
          <option value="MOBA">Multiplayer Online Battle Arena (MOBA)</option>
          <option value="Fighting">Fighting</option>
          <option value="Sports">Sports</option>
          <option value="Racing">Racing</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">เนื้อหากระทู้</label>
        <textarea class="form-control" id="descteam" rows="3" placeholder="ใส่เนื้อหาของกระทู้..." name="content"></textarea>
      </div>
      <input type="hidden" name="tags" id="tags" value="">
      <div class="form-group">
        <label for="img">แนบรูปภาพ:</label>
        <input type="file" id="party-img" name="image" accept="image/*" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">เพิ่มแท็ก: </label>
            <div class="simple-tags"
                id="containers" 
                data-simple-tags="community">
            </div>
        </input>
      </div>
      <input type="hidden" name="tags" id="tags">
      <span class="add-tag-remark">หมายเหตุ: กดปุ่ม space bar หรือ , (comma) เพื่อเป็นการเพิ่มแท็ก และคลิกที่ x เพื่อเป็นการลบแท็ก</span>
      <span class="profile-remark">*โปรดระบุแท็กให้เหมาะสมและชัดเจนเพื่อง่ายต่อการค้นหา</span>
      <div class="party-btn">
        <div class="submit-create-party">
          <button type="submit" class="submit-create-party-btn" onclick="c_tag(document.getElementById('containers').getAttribute('data-simple-tags'))">
            <svg class="bi bi-file-earmark-plus" width="1.3em" height="1.3em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 1H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h5v-1H4a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1h5v2.5A1.5 1.5 0 0 0 10.5 6H13v2h1V6L9 1z"/>
              <path fill-rule="evenodd" d="M13.5 10a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13v-1.5a.5.5 0 0 1 .5-.5z"/>
              <path fill-rule="evenodd" d="M13 12.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"/>
            </svg>
            สร้างกระทู้
          </button>
        </div>
      </div>

    </form>

  </div>
  <script type="text/javascript">
    CKEDITOR.replace( 'content' );
</script>

</body>
</html>

<%- include("patials/footer") %>

<script>
  var el = document.getElementById('containers');
  new Tags(el);

  function c_tag(x){
        document.getElementById("tags").value = x;
    }
</script>

