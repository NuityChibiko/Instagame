<%- include("patials/header") %>

้<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>allNews</title>
    <link rel="stylesheet" href="/css/all_news.css">
</head>
<body>
    <main class="news-body" role="news"> 
        <div id="news-section" style="position: relative;">
          <header class="headline headline-sticky">
            <h2 class="headline__name">ข่าวเกมทั้งหมด</h2>
          </header>
          
          <section class="box">
                  <div class="row" style="display:flex; flex-wrap:wrap;">
                    <% News.forEach(function(news){ %>
                    <div class="col-md-3 col-sm-6">
                      <article class="entry">
                        <figure class="entry__thumb entry__thumb--zoom">
                          <a href="/news/<%= news._id %>">
                            <img src="https://www.online-station.net/pic/X2NvbnRlbnQvMjAyMC8wNTE1LzE2NDMxNi90aHVtYm5haWwvVHJ1ZS1TdXBlci1GaWJlci1HYW1lci1Qcm8tUGFja18xMjAwXzYyOC5qcGcmdz0yODAmaD0xNDc" class="card-img-top">
                          </a>
                        </figure>
                        <div class="entry__body">
                          <h4 class="entry__title">
                            <a href="/news/<%= news._id %>">
                              <%= news.head %>
                            </a>
                          </h4>
                          <div class="entry__meta">
                            <span class="entry__meta__count">
                              <i class="fas fa-eye"></i>
                              ใส่ยอดวิว
                            </span>
                            <span class="entry__meta__posted">
                              <i class="far fa-clock"></i>
                              <%= news.date %>
                            </span>
                          </div>
                        </div>
                      </article>
                    </div>
                <% }); %> 
         </section>
         <header class="add-view">
          <button href="#" class="scrollto-add">
            โหลดเพิ่ม
            <i class="fas fa-plus"></i>
          </button>
        </header>

        </div>
        <button type="button" class="btn btn-primary"><a href="/news/c_news">Create News</a></button>
    </main>
</body>
</html>

<%- include("patials/footer") %>

