<%- include("patials/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>create-news</title>
    <link rel="stylesheet" href="/css/c_news.css">
</head>
<body>
    <div class="create-news" href="/">
        <a href="/" class="create-news_btn_close">
            <div class="create-news-icon-close"></div>
        </a>
        <div class="create-news_header">
            <h3 style="font-family: 'Kanit', sans-serif; color: gray;">สร้างข่าว</h3>
        </div>
        <form action = '/news/c_news' method = 'POST' class="form-hor">
            <div>
                <label for="text" class="label-form-title">พาดหัวข่าว</label>
                <div class="form-inside">
                    <input type="text" class="form-item" id="headline" name="headline" placeholder="ใส่พาดหัวข่าว" required>
                </div>
            </div>
            <div>
                <label for="text" class="label-form-title">ชื่อเกม</label>
                <div class="form-inside">
                    <input type="text" class="form-item" id="game" name="game" placeholder="ใส่ชื่อเกม" required>
                </div>
            </div>
            <div>
                <label for="text" class="label-form-title">เนื้อหาข่าว</label>
                <div class="form-inside">
                    <textarea rows="10" cols="50" class="form-item" id="content" name="content" required></textarea>    
                </div>
            </div>
            <div>
                <label for="text" class="label-form-title">แนบรูปภาพ</label>
                <div class="form-inside">
                    <input type="file" class="form-item" id="picture" name="picture" required>
                </div>
            </div>
            <div class="submit-create-news">
                <input type="submit" class="submit-create-news-btn" value="สร้างข่าว">
            </div>
        </form>
    </div>
</body>
</html>

