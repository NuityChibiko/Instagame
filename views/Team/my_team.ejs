<%- include("patials/header") %>

้<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My team</title>
    <link rel="stylesheet" href="/css/my_team.css">
</head>
<body>
    <main class="teams-body" role="news"> 
        <div id="teams-section" style="position: relative;">
          <header class="teams__headline headline-sticky">
            <h2 class="headline__name">ปาร์ตี้ของฉัน</h2>
            <div class="teams__search">
                <input class="form-control mr-sm-2" type="search" id="search" placeholder="ค้นหาปาร์ตี้ของฉัน..." aria-label="Search" maxlength="200">
            </div>
            <button class="my_team-icon" onclick="window.location.href='/team';">
                <i class="fas fa-search"></i>
                <span>ค้นหาปาร์ตี้อื่น</span> 
            </button>
            <button class="create_team-icon" onclick="window.location.href='/team/create';">
                <i class="fas fa-plus"></i>
                <span>สร้างปาร์ตี้</span> 
            </button>
          </header>
          <section class="box">
            <div class="row" style="display:flex; flex-wrap:wrap;">
                    <% Team.forEach(function(team){ %>
                      <% for(var n = 0; n < team.number; n++){ %>
                        <% if(currentUser && team.party[n].equals(currentUser._id)) { %>
                    <div class="col-md-3 col-sm-6">
                    <article class="entry">
                      <figure class="entry__thumb entry__thumb--zoom">
                        <a href="/team/<%= team._id %>">
                          <img src=<%= '../uploads/team/' + team.image %> class="card-img-top">
                        </a>
                      </figure>
                      <div class="entry__body">
                        <h4 class="entry__title">
                          <a href="/team/<%= team._id %>">
                            <%= team.head %>
                          </a>
                        </h4>
                        <div class="entry__people">
                          <% if(team.number >= 1) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                          <% if(team.number >= 2) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                          <% if(team.number >= 3) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                          <% if(team.number >= 4) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                          <% if(team.number >= 5) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                          <% if(team.number >= 6) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                          <% if(team.number >= 7) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                          <% if(team.number >= 8) { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                        </div>
                        <div class="entry__meta">
                          <span class="entry__meta__count">
                            ปาร์ตี้: <span><%= team.number %>/<%= team.maxplayer %></span>
                          </span>
                        </div>
                        <div class="entry__meta">
                          <span class="entry__meta__posted">
                            <i class="fas fa-crown"></i>
                            <span><%= team.user_post.alias %></span>
                          </span>
                        </div>
                        <div class="entry__meta">
                          <span class="entry__meta__count">
                            <i class="fas fa-calendar-week"></i>
                            <%= moment(team.appointment_date).format("DD/MM/YYYY") %>
                          </span>
                          <span class="entry__meta__posted">
                            <i class="far fa-clock"></i>
                            <%= team.appointment_time %>
                          </span>
                        </div>
                        <div class="entry__meta2">
                          <span class="entry__meta__count2">
                            <i class="fas fa-gamepad"></i>
                            <span><%= team.game %></span>
                          </span>
                        </div>
                        <div class="entry__meta3">
                          <% var inv = true %>
                          <% for(var n = 0; n < team.number; n++){ %>
                          <% if(currentUser && team.party[n].equals(currentUser._id)) { %> <!--แก้เป็นเช็คทุกตัวในรายชื่อ-->
                          <button class="entry__meta__posted4">
                            <i class="fas fa-check-circle"></i>
                            เข้าร่วมแล้ว
                          </button>
                          <% inv = false %>
                          <% break %>
                          <% }} %>
                          <% if(inv) { %>
                            <form action="/team/<%= team._id %>/addlist" method="POST" style="display: inline;">
                            <button class="entry__meta__posted2">
                              <i class="fas fa-sign-in-alt"></i>
                              เข้าร่วมปาร์ตี้
                            </button>
                            </form>
                          <% } %>
                          <a href="/team/<%= team._id %>">
                            <button class="entry__meta__posted4">
                              <i class="fas fa-info-circle"></i>
                              รายละเอียด
                            </button>
                          </a>
                        </div>
                      </div>
                    </article> 
                  </div>
                  <% }} %>
                  <% }) %>
                </div>
                <header class="add-view">
                  <button href="#" class="scrollto-add">
                    โหลดเพิ่ม
                    <i class="fas fa-plus"></i>
                  </button>
              </header>  
          
       </section>
         

        </div>
    </main>
</body>
</html>

<%- include("patials/footer") %>

