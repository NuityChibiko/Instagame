<%- include("patials/header") %>

้<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>teams</title>
    <link rel="stylesheet" href="/css/team.css">
</head>
<body>
    <main class="teams-body" role="news"> 
        <div id="teams-section" style="position: relative;">
          <header class="teams__headline headline-sticky">
            <h2 class="headline__name">หาปาร์ตี้เล่นเกม</h2>
            <div class="teams__search">
                <input class="form-control mr-sm-2" type="search" id="search" placeholder="ค้นหาปาร์ตี้..." aria-label="Search" maxlength="200">
            </div>
            <button class="my_team-icon">
                <i class="fas fa-users"></i>
                <span>ปาร์ตี้ของฉัน</span> 
            </button>
            <button class="create_team-icon">
                <i class="fas fa-plus"></i>
                <span>สร้างปาร์ตี้</span> 
            </button>
          </header>
  
          <section class="box">
              <div class="row" style="display:flex; flex-wrap:wrap;">
                      <% Team.forEach(function(team){ %>
                      <div class="col-md-3 col-sm-6">
                      <article class="entry">
                        <figure class="entry__thumb entry__thumb--zoom">
                          <a href="/team/<%= team._id %>">
                            <img src="https://www.online-station.net/pic/X2NvbnRlbnQvMjAyMC8wNTE1LzE2NDMxNi90aHVtYm5haWwvVHJ1ZS1TdXBlci1GaWJlci1HYW1lci1Qcm8tUGFja18xMjAwXzYyOC5qcGcmdz0yODAmaD0xNDc" class="card-img-top">
                          </a>
                        </figure>
                        <div class="entry__body">
                          <h4 class="entry__title">
                            <a href="/team/<%= team._id %>">
                              <%= team.head %>
                            </a>
                          </h4>
                          <div class="entry__people">
                            <i class="fas fa-user"></i>
                            <i class="fas fa-user"></i>
                            <i class="fas fa-user"></i>
                            <i class="fas fa-user"></i>
                          </div>
                          <div class="entry__meta">
                            <span class="entry__meta__count">
                              ปาร์ตี้: <span>4/5</span>
                            </span>
                          </div>
                          <div class="entry__meta">
                            <span class="entry__meta__posted">
                              <i class="fas fa-crown"></i>
                              <span>ใส่ชื่อหัวหน้าปาร์ตี้</span>
                            </span>
                          </div>
                          <div class="entry__meta">
                            <span class="entry__meta__count">
                              <i class="fas fa-calendar-week"></i>
                              <%= team.appointment %>
                            </span>
                            <span class="entry__meta__posted">
                              <i class="far fa-clock"></i>
                              21:00
                            </span>
                          </div>
                          <div class="entry__meta2">
                            <span class="entry__meta__count2">
                              <i class="fas fa-gamepad"></i>
                              <span><%= team.game %></span>
                            </span>
                          </div>
                          <div class="entry__meta3">
                            <button class="entry__meta__posted2">
                              <i class="fas fa-sign-in-alt"></i>
                              เข้าร่วมปาร์ตี้
                            </button>
                            <button class="entry__meta__posted3">
                              <a class="fas fa-info-circle" href="/team/<%= team._id %>"></a>
                              รายละเอียด
                            </button>
                          </div>
                        </div>
                      </article>
                      <% }) %>
                    </div>
                  </div>

              <header class="add-view">
                <button href="#" class="scrollto-add">
                  โหลดเพิ่ม
                  <i class="fas fa-plus"></i>
                </button>
            </header>
            
         </section>
      </div>
    </main>
</body>
</html>

<%- include("patials/footer") %>

