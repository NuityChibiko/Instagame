<%- include("patials/header") %>
<head>
    <title>Create team</title>
</head>
    
<body>
    <div class="container" style="width: 35%; margin: 80px auto;" >
    <form>
        <div class="form-group">
          <label for="exampleFormControlInput1">Heading</label>
          <input type="text" class="form-control" id="heading" placeholder="your destination in game">
        </div>
        <div class="form-group">
          <label for="img">Select image:</label>
          <input type="file" id="img" name="img" accept="image/*">
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput2">In Game Name</label>
          <input type="text" class="form-control" id="ingamename" placeholder="neroswords">
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Select your party number</label>
          <select class="form-control" id="exampleFormControlSelect1">
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
          </select>
        </div>
        <div class="form-group">
          <label for="date">Appointment date</label>
          <input type="date" id="date" />
        </div>
        <div class="form-group">
          <label for="date">Appointment time</label>
          <input type="time" id="time" />
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Other Description(please tell your server if have more than one)</label>
          <textarea class="form-control" id="descteam" rows="3"></textarea>
        </div>
        <div class="simple-tags" id="container" data-simple-tags="overwatch,FPS"></div>
        <button type="submit" class="btn-outline-primary" style="float: right;">Create</button>
      </form>
    </div>
</body>

<%- include("patials/footer") %>

<script>
  var el = document.getElementById('container');
  new Tags(el);
</script>